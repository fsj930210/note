{
  "name": "@fengshaojian/npm-script",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "config": {
    "port": 3000
  },
  "scripts": {
    "bump": "scripty",
    "release:patch": "npm version patch && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags",
    "release:major": "npm version major && git push && git push --tags",
    "prepush": "npm run test",
    "precommit": "lint-staged",
    "predeploy": "npm i && npm run build",
    "deploy": "pm2 restart pm2.json",
    "logs": "tail -f logs/*",
    "test": "# 运行所有代码单元测试 \n   npm-run-all --parallel test:*",
    "lint:js": "eslint src --ext .ts,.js",
    "lint:css": "stylelint src/*.css",
    "lint:json": "jsonlint --quiet *.json",
    "lint:markdown": "markdownlint --config .markdownlint.json *.md",
    "test:js": "cross-env NODE_ENV=test mocha tests/",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint": "# 运行所有代码检查 \n   npm-run-all --parallel lint:*",
    "pretest": "npm run lint",
    "cover": "node scripts/cover.js",
    "cover:serve": "scripty",
    "cover:open": "scripty",
    "watch:test": "npm run test:js -- --watch",
    "watch": "npm-run-all --parallel watch:*",
    "watch:lint": "onchange -i \"**/*.js\" \"**/*.less\" -- npm run lint",
    "client": "npm-run-all --parallel client:*",
    "client:reload-server": "livereload client/",
    "client:static-server": "http-server client/",
    "prebuild": "rm -rf dist && mkdir -p dist/{images,styles,scripts}",
    "build:images": "scripty",
    "build:styles": "scripty",
    "build:scripts": "scripty",
    "build:hash": "scripty",
    "build": "scripty"
  },
  "keywords": [],
  "author": "fengshaojian <fsj930210@163.com> (https://www.github.com/fsj930210)",
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.3.6",
    "chalk": "^5.1.2",
    "cpr": "^3.0.1",
    "cross-env": "^7.0.3",
    "cross-var": "^1.1.0",
    "cssmin": "^0.4.3",
    "express": "^4.18.2",
    "hashmark": "^5.0.0",
    "http-server": "^14.1.1",
    "husky": "^8.0.1",
    "imagemin-cli": "^7.0.0",
    "jsonlint": "^1.6.3",
    "lint-staged": "^13.0.3",
    "livereload": "^0.9.3",
    "make-dir-cli": "^3.0.0",
    "markdownlint-cli": "^0.32.2",
    "mocha": "^10.1.0",
    "morgan": "^1.10.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "onchange": "^7.1.0",
    "open-cli": "^7.1.0",
    "pm2": "^5.2.2",
    "replaceinfiles": "^1.1.4",
    "rimraf": "^3.0.2",
    "scripty": "^2.1.1",
    "shelljs": "^0.8.5",
    "stylelint": "^14.14.0",
    "stylelint-config-standard": "^29.0.0",
    "uglify-es": "^3.3.9"
  },
  "nyc": {
    "exclude": [
      "**/*.spec.js",
      "**/.*.js"
    ]
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.less": "stylelint",
    "*.css": "stylelint",
    "*.json": "jsonlint --quiet",
    "*.md": "markdownlint --config .markdownlint.json"
  }
}
